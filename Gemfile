source 'https://rubygems.org'

# Specify your gem's dependencies in dcp.gemspec
gemspec

# Debugging, metrics
group :development do
  gem 'pry'
  gem 'simplecov'
  gem 'json'
end

# Guards
group :guard do
  gem 'guard-rspec'
  gem 'guard-yard'
  gem 'guard-shell'
end

# Test (Travis CI)
group :test do
  gem 'rake'
  gem 'rspec'
  gem 'tailor'
  gem 'coveralls'
end
